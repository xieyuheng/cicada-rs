(def new/cons
  (jojo
    (note -> cons)
    (if cons-pointer cons-area-top eq? then
        mark-cons-area
        cons-pointer/init
        cons-pointer/next-free
        (if cons-pointer cons-area-top eq? then
            (string "fatal error : cons-area is full") string/print
            newline bye)
        (loop))
    (if cons-pointer get-cell current-mark eq? then
        cons-pointer/next (loop))
    cons-pointer
    cons-pointer/next end))

